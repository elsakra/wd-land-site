---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title,
  description = "WD Land - Your trusted partner for land acquisition, development, and investment opportunities. Expert guidance for all your land needs.",
  image = "/og-image.jpg",
  canonical
} = Astro.props;

const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "RealEstateAgent",
        "name": "WD Land",
        "description": "Professional land acquisition, development, and investment services",
        "url": "https://wdland.com",
        "logo": "https://wdland.com/logo.svg",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        },
        "serviceArea": {
          "@type": "State",
          "name": "United States"
        },
        "services": [
          "Land Acquisition",
          "Property Development",
          "Investment Consulting",
          "Due Diligence",
          "Market Analysis"
        ]
      }
    </script>
    
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <slot />
    
    <script>
      import '../scripts/animations.ts';
    </script>
  </body>
</html>