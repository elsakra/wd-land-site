---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <Hero 
      title="Comprehensive Land Investment Services"
      subtitle="Expert Solutions"
      description="From acquisition to development, our full-service approach ensures your land investments achieve maximum potential and returns."
      primaryCTA={{ text: "Get Started", href: "/contact" }}
      secondaryCTA={{ text: "View Properties", href: "/properties" }}
      backgroundImage="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
      overlay={true}
    />
    
    <!-- Services Overview -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Our <span class="text-gradient">Services</span>
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-gray-600 max-w-3xl mx-auto">
            We provide end-to-end land investment solutions designed to maximize your returns and minimize your risks.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
          {services.map((service, index) => (
            <div class={`animate-on-scroll stagger-${(index % 3) + 1} card-hover bg-gray-50 rounded-xl p-8 border border-gray-100`}>
              <div class="text-4xl mb-6">{service.icon}</div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4">{service.title}</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">{service.description}</p>
              <a href={`#${service.id}`} class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors duration-300">
                Learn More
                <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Detailed Service Sections -->
    {services.map((service, index) => (
      <section id={service.id} class={`section-padding ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
        <div class="container-custom">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class={index % 2 === 0 ? 'order-1' : 'order-2'}>
              <div class="text-4xl mb-6">{service.icon}</div>
              <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                {service.title}
              </h2>
              <p class="animate-on-scroll stagger-1 text-xl text-gray-600 mb-8 leading-relaxed">
                {service.description}
              </p>
              
              <div class="animate-on-scroll stagger-2 mb-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Key Features</h3>
                <ul class="space-y-3">
                  {service.features.map((feature) => (
                    <li class="flex items-center text-gray-700">
                      <svg class="h-5 w-5 text-primary-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="animate-on-scroll stagger-3">
                <a href="/contact" class="btn-primary">
                  Get Started
                </a>
              </div>
            </div>

            <div class={`animate-on-scroll stagger-2 ${index % 2 === 0 ? 'order-2' : 'order-1'}`}>
              <div class="bg-white rounded-2xl p-8 shadow-lg">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">Our Process</h3>
                <div class="space-y-4">
                  {service.process.map((step, stepIndex) => (
                    <div class="flex items-start space-x-4">
                      <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-semibold flex-shrink-0">
                        {stepIndex + 1}
                      </div>
                      <div class="text-gray-700">{step}</div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    ))}

    <!-- CTA Section -->
    <section class="section-padding bg-gradient-to-r from-primary-600 to-primary-800">
      <div class="container-custom text-center">
        <div class="max-w-4xl mx-auto">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-white mb-6">
            Ready to Maximize Your Land Investment Potential?
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-primary-100 mb-10 leading-relaxed">
            Our expert team is ready to help you achieve your land investment goals. Contact us today for a free consultation and discover how we can add value to your portfolio.
          </p>
          <div class="animate-on-scroll stagger-2 flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-white text-primary-600 font-semibold py-4 px-8 rounded-lg hover:bg-gray-100 transition-colors duration-300 text-lg">
              Schedule Consultation
            </a>
            <a href="tel:+1234567890" class="border-2 border-white text-white font-semibold py-4 px-8 rounded-lg hover:bg-white hover:text-primary-600 transition-all duration-300 text-lg">
              Call (123) 456-7890
            </a>
          </div>
        </div>
      </div>
    </section>
