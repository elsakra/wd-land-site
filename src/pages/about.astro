---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "About WD Land - Expert Land Investment Team";
const pageDescription = "Learn about WD Land's experienced team, our mission, values, and proven track record in land acquisition, development, and investment services.";

const team = [
  {
    name: "William Davis",
    title: "Founder & CEO",
    bio: "With over 20 years in real estate and land development, William founded WD Land to provide comprehensive land investment solutions. His expertise spans commercial development, agricultural land, and recreational properties.",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80",
    specialties: ["Land Development", "Investment Strategy", "Market Analysis"]
  },
  {
    name: "Sarah Mitchell",
    title: "Director of Acquisitions",
    bio: "Sarah brings 15 years of experience in land acquisition and due diligence. She specializes in identifying high-value opportunities and managing complex transactions from start to finish.",
    image: "https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80",
    specialties: ["Due Diligence", "Negotiation", "Risk Assessment"]
  },
  {
    name: "Michael Rodriguez",
    title: "Development Manager",
    bio: "Michael oversees all development projects with expertise in zoning, permitting, and construction management. His background in civil engineering ensures projects are completed efficiently and profitably.",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80",
    specialties: ["Project Management", "Zoning & Permits", "Construction"]
  },
  {
    name: "Jennifer Chen",
    title: "Investment Analyst",
    bio: "Jennifer provides detailed market analysis and financial modeling for all investment opportunities. Her analytical approach helps clients make data-driven decisions for optimal returns.",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80",
    specialties: ["Financial Modeling", "Market Research", "ROI Analysis"]
  }
];

const milestones = [
  { year: "2008", event: "WD Land founded with a vision to transform land investment" },
  { year: "2012", event: "Completed first major development project - 200-acre residential community" },
  { year: "2015", event: "Expanded services to include comprehensive investment consulting" },
  { year: "2018", event: "Reached $25M in total transaction volume" },
  { year: "2020", event: "Launched digital platform for enhanced client experience" },
  { year: "2023", event: "Achieved $50M+ in total transactions and 500+ properties sold" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <Hero 
      title="About WD Land"
      subtitle="Our Story"
      description="Dedicated to excellence in land investment services with over 15 years of proven results and client success."
      primaryCTA={{ text: "Work With Us", href: "/contact" }}
      secondaryCTA={{ text: "Our Services", href: "/services" }}
      backgroundImage="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
      overlay={true}
    />
    
    <!-- Company Overview -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
          <div>
            <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
              Our <span class="text-gradient">Mission</span>
            </h2>
            <p class="animate-on-scroll stagger-1 text-xl text-gray-600 mb-8 leading-relaxed">
              At WD Land, we empower our clients with the knowledge, resources, and expertise needed to make informed land investment decisions that create lasting value and achieve their financial goals.
            </p>
            <p class="animate-on-scroll stagger-2 text-lg text-gray-600 mb-8 leading-relaxed">
              Founded in 2008, we have built our reputation on integrity, expertise, and results. Our comprehensive approach combines deep market knowledge with personalized service to deliver exceptional outcomes for every client.
            </p>
            
            <div class="animate-on-scroll stagger-3 grid grid-cols-2 gap-8">
              <div class="text-center">
                <div class="text-4xl font-bold text-primary-600 mb-2">500+</div>
                <div class="text-gray-600 font-medium">Properties Sold</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-primary-600 mb-2">$50M+</div>
                <div class="text-gray-600 font-medium">Total Transactions</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-primary-600 mb-2">15+</div>
                <div class="text-gray-600 font-medium">Years Experience</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-primary-600 mb-2">98%</div>
                <div class="text-gray-600 font-medium">Client Satisfaction</div>
              </div>
            </div>
          </div>

          <div class="animate-on-scroll stagger-2">
            <div class="relative">
              <img 
                src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                alt="Team collaboration" 
                class="w-full rounded-2xl shadow-2xl"
                loading="lazy"
              />
              <div class="absolute -bottom-6 -left-6 bg-primary-600 text-white p-6 rounded-xl shadow-lg">
                <div class="text-2xl font-bold">Excellence</div>
                <div class="text-sm">In Every Transaction</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Our Core <span class="text-gradient">Values</span>
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-gray-600 max-w-3xl mx-auto">
            These principles guide everything we do and ensure we deliver exceptional value to our clients.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="animate-on-scroll stagger-1 text-center p-8 bg-white rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-3xl">ü§ù</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Integrity</h3>
            <p class="text-gray-600 leading-relaxed">We conduct business with the highest ethical standards, ensuring transparency and honesty in every transaction.</p>
          </div>

          <div class="animate-on-scroll stagger-2 text-center p-8 bg-white rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-3xl">üéØ</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Expertise</h3>
            <p class="text-gray-600 leading-relaxed">Our team brings decades of combined experience in land acquisition, development, and investment strategies.</p>
          </div>

          <div class="animate-on-scroll stagger-3 text-center p-8 bg-white rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-3xl">üèÜ</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Results</h3>
            <p class="text-gray-600 leading-relaxed">We're committed to delivering exceptional outcomes that exceed our clients' expectations and investment goals.</p>
          </div>

          <div class="animate-on-scroll stagger-4 text-center p-8 bg-white rounded-xl shadow-lg">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-3xl">ü§ù</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Partnership</h3>
            <p class="text-gray-600 leading-relaxed">We build long-term relationships with our clients, serving as trusted advisors throughout their investment journey.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Meet Our <span class="text-gradient">Team</span>
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-gray-600 max-w-3xl mx-auto">
            Our experienced professionals bring diverse expertise and a shared commitment to your success.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {team.map((member, index) => (
            <div class={`animate-on-scroll stagger-${(index % 4) + 1} card-hover bg-gray-50 rounded-xl overflow-hidden`}>
              <div class="aspect-w-1 aspect-h-1">
                <img 
                  src={member.image} 
                  alt={member.name} 
                  class="w-full h-64 object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2">{member.name}</h3>
                <p class="text-primary-600 font-semibold mb-4">{member.title}</p>
                <p class="text-gray-600 text-sm mb-4 leading-relaxed">{member.bio}</p>
                <div class="space-y-2">
                  <h4 class="font-semibold text-gray-900 text-sm">Specialties:</h4>
                  <div class="flex flex-wrap gap-2">
                    {member.specialties.map((specialty) => (
                      <span class="bg-primary-100 text-primary-800 text-xs px-2 py-1 rounded-full">
                        {specialty}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Company Timeline -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Our <span class="text-gradient">Journey</span>
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-gray-600 max-w-3xl mx-auto">
            Key milestones in our growth and commitment to excellence in land investment services.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-primary-200"></div>
            
            {milestones.map((milestone, index) => (
              <div class={`animate-on-scroll stagger-${(index % 3) + 1} relative flex items-center mb-12 ${index % 2 === 0 ? 'justify-start' : 'justify-end'}`}>
                <div class={`w-1/2 ${index % 2 === 0 ? 'pr-8 text-right' : 'pl-8 text-left'}`}>
                  <div class="bg-white rounded-xl p-6 shadow-lg">
                    <div class="text-2xl font-bold text-primary-600 mb-2">{milestone.year}</div>
                    <p class="text-gray-700">{milestone.event}</p>
                  </div>
                </div>
                
                <!-- Timeline dot -->
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-primary-600 rounded-full border-4 border-white shadow-lg"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-gradient-to-r from-primary-600 to-primary-800">
      <div class="container-custom text-center">
        <div class="max-w-4xl mx-auto">
          <h2 class="animate-on-scroll text-4xl md:text-5xl font-bold text-white mb-6">
            Ready to Work with the Best?
          </h2>
          <p class="animate-on-scroll stagger-1 text-xl text-primary-100 mb-10 leading-relaxed">
            Join hundreds of satisfied clients who have achieved their land investment goals with WD Land. Let's discuss how we can help you succeed.
          </p>
          <div class="animate-on-scroll stagger-2 flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-white text-primary-600 font-semibold py-4 px-8 rounded-lg hover:bg-gray-100 transition-colors duration-300 text-lg">
              Start Your Journey
            </a>
            <a href="/services" class="border-2 border-white text-white font-semibold py-4 px-8 rounded-lg hover:bg-white hover:text-primary-600 transition-all duration-300 text-lg">
              View Our Services
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>