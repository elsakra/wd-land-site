---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);
---

<Layout 
  title="Land Development Blog - WD Land Insights & Expertise"
  description="Stay informed with WD Land's blog featuring expert insights on land development, sustainable practices, industry trends, and project management tips."
>
  <Header />
  
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="section-padding bg-gradient-to-br from-primary-50 to-secondary-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center fade-in-scroll">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-secondary-900 mb-6">
            Land Development Insights
          </h1>
          <p class="text-xl md:text-2xl text-secondary-600 leading-relaxed">
            Expert insights, industry trends, and practical guidance from WD Land's experienced team of land development professionals.
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="section-padding bg-white">
        <div class="container-custom">
          <div class="text-center mb-16 fade-in-scroll">
            <h2 class="text-3xl md:text-4xl font-serif font-bold text-secondary-900 mb-6">
              Featured Articles
            </h2>
            <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
              Our most popular and insightful articles on land development.
            </p>
          </div>

          <div class="stagger-container grid grid-cols-1 lg:grid-cols-2 gap-8">
            {featuredPosts.map((post) => (
              <article class="stagger-item card overflow-hidden opacity-0">
                <div class="p-8">
                  <div class="flex items-center text-sm text-secondary-500 mb-4">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="mx-2">•</span>
                    <span>{post.data.author}</span>
                  </div>
                  
                  <h3 class="text-2xl font-serif font-bold text-secondary-900 mb-4 hover:text-primary-600 transition-colors duration-200">
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                  </h3>
                  
                  <p class="text-secondary-600 mb-6 leading-relaxed">
                    {post.data.description}
                  </p>
                  
                  <div class="flex items-center justify-between">
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="px-3 py-1 bg-primary-100 text-primary-700 text-sm rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                    
                    <a 
                      href={`/blog/${post.slug}`} 
                      class="text-primary-600 hover:text-primary-700 font-medium flex items-center group"
                    >
                      Read More
                      <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Posts -->
    <section class="section-padding bg-secondary-50">
      <div class="container-custom">
        <div class="text-center mb-16 fade-in-scroll">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-secondary-900 mb-6">
            Latest Articles
          </h2>
          <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
            Stay up to date with the latest insights and trends in land development.
          </p>
        </div>

        <div class="stagger-container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {regularPosts.map((post) => (
            <article class="stagger-item card overflow-hidden opacity-0">
              <div class="p-6">
                <div class="flex items-center text-sm text-secondary-500 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="mx-2">•</span>
                  <span>{post.data.author}</span>
                </div>
                
                <h3 class="text-xl font-serif font-bold text-secondary-900 mb-3 hover:text-primary-600 transition-colors duration-200">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                
                <p class="text-secondary-600 mb-4 leading-relaxed line-clamp-3">
                  {post.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="px-2 py-1 bg-primary-100 text-primary-700 text-xs rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <a 
                    href={`/blog/${post.slug}`} 
                    class="text-primary-600 hover:text-primary-700 font-medium text-sm flex items-center group"
                  >
                    Read
                    <svg class="w-3 h-3 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="section-padding bg-gradient-to-br from-primary-600 to-primary-800">
      <div class="container-custom text-center fade-in-scroll">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
          Stay Informed
        </h2>
        <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
          Subscribe to our newsletter for the latest insights on land development, industry trends, and project updates.
        </p>
        <div class="max-w-md mx-auto">
          <form class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Enter your email address" 
              class="flex-1 px-4 py-3 rounded-lg border border-primary-300 focus:ring-2 focus:ring-white focus:border-white transition-colors duration-200"
              required
            />
            <button type="submit" class="btn-secondary btn-hover bg-white text-primary-600 hover:bg-primary-50 whitespace-nowrap">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>