---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .filter(p => p.data.tags.some(tag => post.data.tags.includes(tag)))
  .slice(0, 3);
---

<Layout 
  title={`${post.data.title} - WD Land Blog`}
  description={post.data.description}
>
  <Header />
  
  <main class="pt-16 lg:pt-20">
    <!-- Article Header -->
    <section class="section-padding bg-gradient-to-br from-primary-50 to-secondary-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto fade-in-scroll">
          <!-- Breadcrumb -->
          <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-secondary-600">
              <li><a href="/" class="hover:text-primary-600 transition-colors duration-200">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/blog" class="hover:text-primary-600 transition-colors duration-200">Blog</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-secondary-900 font-medium truncate">{post.data.title}</li>
            </ol>
          </nav>
          
          <!-- Article Meta -->
          <div class="flex items-center text-secondary-600 mb-6">
            <time datetime={post.data.pubDate.toISOString()} class="text-sm">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <span class="mx-3">•</span>
            <span class="text-sm">{post.data.author}</span>
            {post.data.updatedDate && (
              <>
                <span class="mx-3">•</span>
                <span class="text-sm">
                  Updated {post.data.updatedDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </span>
              </>
            )}
          </div>
          
          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-secondary-900 mb-6 leading-tight">
            {post.data.title}
          </h1>
          
          <!-- Description -->
          <p class="text-xl md:text-2xl text-secondary-600 leading-relaxed mb-8">
            {post.data.description}
          </p>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-primary-100 text-primary-700 text-sm rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <article class="prose prose-lg prose-secondary max-w-none fade-in-scroll">
            <Content />
          </article>
        </div>
      </div>
    </section>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="section-padding bg-secondary-50">
        <div class="container-custom">
          <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16 fade-in-scroll">
              <h2 class="text-3xl md:text-4xl font-serif font-bold text-secondary-900 mb-6">
                Related Articles
              </h2>
              <p class="text-xl text-secondary-600">
                Continue exploring our insights on land development.
              </p>
            </div>

            <div class="stagger-container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedPosts.map((relatedPost) => (
                <article class="stagger-item card overflow-hidden opacity-0">
                  <div class="p-6">
                    <div class="flex items-center text-sm text-secondary-500 mb-3">
                      <time datetime={relatedPost.data.pubDate.toISOString()}>
                        {relatedPost.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="mx-2">•</span>
                      <span>{relatedPost.data.author}</span>
                    </div>
                    
                    <h3 class="text-xl font-serif font-bold text-secondary-900 mb-3 hover:text-primary-600 transition-colors duration-200">
                      <a href={`/blog/${relatedPost.slug}`}>{relatedPost.data.title}</a>
                    </h3>
                    
                    <p class="text-secondary-600 mb-4 leading-relaxed line-clamp-3">
                      {relatedPost.data.description}
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <div class="flex flex-wrap gap-1">
                        {relatedPost.data.tags.slice(0, 2).map((tag) => (
                          <span class="px-2 py-1 bg-primary-100 text-primary-700 text-xs rounded-full">
                            {tag}
                          </span>
                        ))}
                      </div>
                      
                      <a 
                        href={`/blog/${relatedPost.slug}`} 
                        class="text-primary-600 hover:text-primary-700 font-medium text-sm flex items-center group"
                      >
                        Read
                        <svg class="w-3 h-3 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="section-padding bg-gradient-to-br from-primary-600 to-primary-800">
      <div class="container-custom text-center fade-in-scroll">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">
          Ready to Start Your Land Development Project?
        </h2>
        <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
          Put our expertise to work for your property. Contact WD Land today for a comprehensive consultation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-secondary btn-hover bg-white text-primary-600 hover:bg-primary-50">
            Get Free Consultation
          </a>
          <a href="/services" class="btn-primary btn-hover bg-primary-500 hover:bg-primary-400 border-primary-400">
            View Our Services
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .prose {
    color: theme('colors.secondary.700');
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: theme('colors.secondary.900');
    font-family: theme('fontFamily.serif');
    font-weight: 600;
  }
  
  .prose h2 {
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }
  
  .prose h3 {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .prose h4 {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }
  
  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: theme('colors.primary.600');
    text-decoration: none;
  }
  
  .prose a:hover {
    color: theme('colors.primary.700');
    text-decoration: underline;
  }
  
  .prose strong {
    color: theme('colors.secondary.900');
    font-weight: 600;
  }
  
  .prose blockquote {
    border-left: 4px solid theme('colors.primary.600');
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: theme('colors.secondary.600');
  }
</style>