---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Our Projects - WD Land Development Portfolio"
  description="Explore WD Land's portfolio of successful land development projects including residential communities, commercial developments, and mixed-use properties."
>
  <Header />
  
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="section-padding bg-gradient-to-br from-primary-50 to-secondary-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center fade-in-scroll">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-secondary-900 mb-6">
            Our Project Portfolio
          </h1>
          <p class="text-xl md:text-2xl text-secondary-600 leading-relaxed">
            Discover how WD Land has transformed raw land into thriving communities, valuable commercial properties, and sustainable developments across diverse markets.
          </p>
        </div>
      </div>
    </section>

    <!-- Project Stats -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center fade-in-scroll">
          <div>
            <div class="text-4xl md:text-5xl font-bold text-primary-600 mb-2">100+</div>
            <div class="text-secondary-600 font-medium">Projects Completed</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-primary-600 mb-2">1,000+</div>
            <div class="text-secondary-600 font-medium">Acres Developed</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-primary-600 mb-2">25+</div>
            <div class="text-secondary-600 font-medium">Years Experience</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-primary-600 mb-2">98%</div>
            <div class="text-secondary-600 font-medium">Client Satisfaction</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="section-padding bg-secondary-50">
      <div class="container-custom">
        <div class="text-center mb-16 fade-in-scroll">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-secondary-900 mb-6">
            Featured Projects
          </h2>
          <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
            Explore some of our most successful land development projects that showcase our expertise and commitment to excellence.
          </p>
        </div>

        <div class="stagger-container space-y-16">
          <!-- Project 1 -->
          <div class="stagger-item grid grid-cols-1 lg:grid-cols-2 gap-12 items-center opacity-0">
            <div>
              <div class="bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl p-8 h-80 flex items-center justify-center">
                <div class="text-center">
                  <div class="w-24 h-24 bg-gradient-to-br from-primary-600 to-primary-800 rounded-full flex items-center justify-center mb-6 mx-auto">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
