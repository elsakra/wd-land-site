---
// No props needed for header
---

<header class="navbar fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-secondary-200 transition-all duration-300">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-primary-800 rounded-lg flex items-center justify-center group-hover:scale-105 transition-transform duration-200">
            <span class="text-white font-bold text-xl">WD</span>
          </div>
          <span class="text-2xl font-serif font-bold text-secondary-900 group-hover:text-primary-600 transition-colors duration-200">WD Land</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-secondary-700 hover:text-primary-600 font-medium transition-colors duration-200 relative group">
          Home
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="/about" class="text-secondary-700 hover:text-primary-600 font-medium transition-colors duration-200 relative group">
          About
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="/services" class="text-secondary-700 hover:text-primary-600 font-medium transition-colors duration-200 relative group">
          Services
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="/projects" class="text-secondary-700 hover:text-primary-600 font-medium transition-colors duration-200 relative group">
          Projects
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="/blog" class="text-secondary-700 hover:text-primary-600 font-medium transition-colors duration-200 relative group">
          Blog
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="/contact" class="btn-primary btn-hover ml-4">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button type="button" class="mobile-menu-button p-2 rounded-md text-secondary-700 hover:text-primary-600 hover:bg-secondary-100 transition-colors duration-200" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden lg:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-secondary-200">
        <a href="/" class="block px-3 py-2 text-secondary-700 hover:text-primary-600 hover:bg-secondary-50 rounded-md font-medium transition-colors duration-200">Home</a>
        <a href="/about" class="block px-3 py-2 text-secondary-700 hover:text-primary-600 hover:bg-secondary-50 rounded-md font-medium transition-colors duration-200">About</a>
        <a href="/services" class="block px-3 py-2 text-secondary-700 hover:text-primary-600 hover:bg-secondary-50 rounded-md font-medium transition-colors duration-200">Services</a>
        <a href="/projects" class="block px-3 py-2 text-secondary-700 hover:text-primary-600 hover:bg-secondary-50 rounded-md font-medium transition-colors duration-200">Projects</a>
        <a href="/blog" class="block px-3 py-2 text-secondary-700 hover:text-primary-600 hover:bg-secondary-50 rounded-md font-medium transition-colors duration-200">Blog</a>
        <a href="/contact" class="block mx-3 mt-4 btn-primary text-center">Get Started</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button') as HTMLButtonElement;
  const mobileMenu = document.querySelector('.mobile-menu') as HTMLElement;
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Add scrolled class to navbar
  window.addEventListener('scroll', () => {
    const navbar = document.querySelector('.navbar') as HTMLElement;
    if (navbar) {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    }
  });
</script>

<style>
  .navbar.scrolled {
    @apply bg-white shadow-lg;
  }
</style>