---
const currentPath = Astro.url.pathname;

const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'About', href: '/about' },
  { name: 'Properties', href: '/properties' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' }
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="header">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300">
            <span class="text-white font-bold text-xl">WD</span>
          </div>
          <span class="text-2xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300">Land</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          {navigation.map((item) => (
            <a
              href={item.href}
              class={`px-3 py-2 text-sm font-medium transition-all duration-300 relative group ${
                currentPath === item.href
                  ? 'text-primary-600'
                  : 'text-gray-700 hover:text-primary-600'
              }`}
            >
              {item.name}
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-600 transition-all duration-300 group-hover:w-full"></span>
              {currentPath === item.href && (
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary-600"></span>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary">
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500 transition-colors duration-300"
          data-mobile-menu-toggle
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" data-mobile-menu>
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white shadow-lg rounded-lg mt-2">
        {navigation.map((item) => (
          <a
            href={item.href}
            class={`block px-3 py-2 text-base font-medium transition-colors duration-300 rounded-md ${
              currentPath === item.href
                ? 'text-primary-600 bg-primary-50'
                : 'text-gray-700 hover:text-primary-600 hover:bg-gray-50'
            }`}
          >
            {item.name}
          </a>
        ))}
        <div class="pt-4">
          <a href="/contact" class="btn-primary w-full text-center">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Add background to header on scroll
  const header = document.getElementById('header') as HTMLElement;
  
  function updateHeader() {
    if (window.scrollY > 50) {
      header.classList.add('backdrop-blur-md', 'bg-white/95', 'shadow-lg');
    } else {
      header.classList.remove('backdrop-blur-md', 'bg-white/95', 'shadow-lg');
    }
  }
  
  window.addEventListener('scroll', updateHeader);
  updateHeader(); // Initial call
</script>