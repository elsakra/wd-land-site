---
export interface Props {
  title: string;
  subtitle: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  backgroundImage?: string;
  overlay?: boolean;
}

const {
  title,
  subtitle,
  primaryCTA,
  secondaryCTA,
  backgroundImage,
  overlay = true
} = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-secondary-900">
    {backgroundImage && (
      <div class="absolute inset-0 hero-parallax">
        <img 
          src={backgroundImage} 
          alt="" 
          class="w-full h-full object-cover opacity-30"
          loading="eager"
        />
      </div>
    )}
    {overlay && (
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/80 to-secondary-900/60"></div>
    )}
  </div>

  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-serif font-bold text-white mb-6 opacity-0">
        {title}
      </h1>
      
      <p class="hero-subtitle text-xl md:text-2xl text-secondary-100 mb-8 max-w-3xl mx-auto leading-relaxed opacity-0">
        {subtitle}
      </p>
      
      {(primaryCTA || secondaryCTA) && (
        <div class="hero-buttons flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0">
          {primaryCTA && (
            <a href={primaryCTA.href} class="btn-primary btn-hover text-lg px-8 py-4">
              {primaryCTA.text}
            </a>
          )}
          {secondaryCTA && (
            <a href={secondaryCTA.href} class="btn-secondary btn-hover text-lg px-8 py-4 bg-white/10 border-white/30 text-white hover:bg-white/20">
              {secondaryCTA.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/70 animate-bounce">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>